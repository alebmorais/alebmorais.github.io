CREATE TABLE frases (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    nome TEXT NOT NULL,
    conteudo TEXT NOT NULL,
    categoria_principal TEXT NOT NULL,
    subcategoria TEXT NOT NULL,
    ordem INTEGER DEFAULT 0
);

